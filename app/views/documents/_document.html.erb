<%= link_to document do %>
  <article id="<%= dom_id document %>" class="border border-gray-300 rounded-lg p-4 w-[200px] max-h-[300px] overflow-hidden">
    <h2 class="text-2xl break-keep font-bold mb-2" >
      <%= document.title %>
    </h2>
    <div class="fade-text">
      <%= sanitize document.body %>
    </div>
  </article>
<% end %>
