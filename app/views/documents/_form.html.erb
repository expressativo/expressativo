<%= form_with model: Document, class: "contents" do |form| %>
  <div class="form-field">
    <%= form.label :name, class: "label" %>
    <%= form.text_field :name, class: "input" %>
  </div>
  
  <div class="form-field">
    <%= form.label :description, class: "label" %>
    <%= form.text_area :description, class: "input" %>
  </div>
  
  <div class="form-field">
    <%= form.label :file, "Archivo", class: "label" %>
    <%= form.file_field :file, class: "input" %>
  </div>
  
  <div class="flex gap-2">
    <%= form.submit "Guardar", class: "button" %>
    <%= link_to "Cancelar", docs_path, class: "button-outline" %>
  </div>
<% end %>