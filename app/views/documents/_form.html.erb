<%= form_with(model: document, class: "contents", url: document.persisted? ? document_path(document) : (@folder ? project_folder_documents_path(@project, @folder) : project_documents_path(@project))) do |form| %>
  <% if document.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(document.errors.count, "error") %> prohibited this document from being saved:</h2>
      <ul class="list-disc ml-6">
        <% document.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card max-w-[95%] mx-auto mb-4 p-4">
    <div class="flex items-center justify-center">
      <%= form.text_field :name, class: "document_input", placeholder: "Escribe un nombre", autofocus: true %>
    </div>
  </div>

  <%= form.hidden_field :document_type %>

  <% if document.document_type == "document" || document.document_type.nil? %>
    <div class="card py-6 px-16 mb-4">
      <%= form.rich_text_area :body, class: 'textarea', placeholder: "Escribe tu documento aquÃ­...", data: { controller: "trix" } %>
    </div>
  <% end %>

  <% if document.document_type == "file" %>
    <div class="card py-6 px-16 mb-4" data-controller="file-upload">
      <div class="mb-4">
        <%= form.label :file, "Subir archivo", class: "block text-sm font-medium text-gray-700 mb-2" %>

        <div data-file-upload-target="dropZone"
             data-action="click->file-upload#openFileSelector"
             class="border-2 border-dashed border-gray-300 rounded-lg p-12 text-center hover:border-blue-400 transition-colors cursor-pointer bg-gray-50 hover:bg-blue-50">
          <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" stroke="currentColor" fill="none" viewBox="0 0 48 48">
            <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
          <p class="text-lg text-gray-600 mb-2">
            <span class="font-semibold text-blue-600">Haz clic para seleccionar</span> o arrastra y suelta
          </p>
          <p class="text-sm text-gray-500" data-file-upload-target="fileInfo">
            Cualquier tipo de archivo
          </p>
        </div>

        <%= form.file_field :file,
                           class: "hidden",
                           data: {
                             file_upload_target: "fileInput",
                             action: "change->file-upload#fileSelected"
                           } %>

        <% if document.file.attached? %>
          <p class="text-sm text-gray-500 mt-2">
            Archivo actual: <%= document.file.filename %> (<%= number_to_human_size(document.file.byte_size) %>)
          </p>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="inline">
    <%= form.submit "Guardar", class: "button" %>
    <%= link_to "Cancelar", :back, class: "button-outline ml-2" %>
  </div>
<% end %>
