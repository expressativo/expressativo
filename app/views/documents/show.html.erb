<% content_for :title, "Showing document" %>

<div class="app_container">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div class="main_header">
    <header>
      <h2 class="font-bold text-xl text-center">
        <%= link_to @project.title, project_path(@project), class: "underline font-semibold capitalize" %>
        <span class="text-2xl font-normal"> - Documentos</span>
      </h2>
    </header>
  </div>
  <div class="main_content">
    <h1 class="font-bold text-4xl text-center">
        <%= @document.title %>
    </h1>
    <hr/ class="max-w-[100px] mx-auto text-gray-300">
    <div class="text-center my-2">
      @document.author - <%= l(@document.created_at, format: :long) %>
    </div>
    <div>
      <%= simple_format(@document.body, sanitize: true) %>
    </div>
  </div>
</div>
