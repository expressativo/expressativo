<% content_for :title, "Showing document" %>

<div class="app_container">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl">Showing document</h1>

  <%= render @document %>

  <%= link_to "Edit this document", edit_document_path(@document), class: "button" %>
  <%= link_to "Back to documents", project_documents_path(@project) , class: "button-outline" %>
  <%= button_to @document, method: :delete, form_class: "sm:inline-block mt-2 sm:mt-0 sm:ml-2" , class: "button-outline", data: { turbo_confirm: "Esta seguro?" }  do %>
  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-trash-icon lucide-trash"><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6"/><path d="M3 6h18"/><path d="M8 6V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/></svg>
  <% end %>
</div>
