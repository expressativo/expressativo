<% content_for :title, "Editar Perfil" %>

<div class="max-w-3xl mx-auto">
  <div class="bg-white shadow-xl rounded-2xl px-8 py-8">

    <%= form_with model: @user, url: profile_path, method: :patch, data: { controller: "avatar-preview" }, class: "space-y-6", multipart: true do |f| %>
      <% if @user.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <h3 class="text-red-800 font-semibold mb-2">
            <%= pluralize(@user.errors.count, "error") %> impidieron guardar los cambios:
          </h3>
          <ul class="list-disc list-inside text-red-700">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Avatar -->
      <div class="space-y-4">
        <label class="block text-sm font-semibold text-gray-700 uppercase tracking-wide">
          Foto de Perfil
        </label>
        
        <div class="flex items-center gap-6">
          <!-- Preview del avatar -->
          <div data-avatar-preview-target="preview">
            <% if @user.avatar.attached? %>
              <%= image_tag @user.avatar, class: "w-24 h-24 rounded-full object-cover border-4 border-purple-200", data: { avatar_preview_target: "image" } %>
            <% else %>
              <div class="w-24 h-24 rounded-full bg-gradient-to-br from-purple-400 to-indigo-500 flex items-center justify-center border-4 border-purple-200" data-avatar-preview-target="placeholder">
                <span class="text-white text-2xl font-bold">
                  <%= @user.first_name&.first&.upcase %><%= @user.last_name&.first&.upcase %>
                </span>
              </div>
            <% end %>
          </div>

          <!-- Input de archivo -->
          <div class="flex-1">
            <%= f.file_field :avatar, 
              accept: "image/png,image/jpeg",
              class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-purple-50 file:text-purple-700 hover:file:bg-purple-100 cursor-pointer",
              data: { action: "change->avatar-preview#preview" } %>
            <p class="mt-2 text-xs text-gray-500">PNG o JPG (máx. 5MB)</p>
          </div>
        </div>
      </div>

      <hr class="border-gray-200">

      <!-- Información Personal -->
      <div class="space-y-4">
        <h2 class="text-xl font-semibold text-gray-900">Información Personal</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <!-- Nombre -->
          <div>
            <%= f.label :first_name, "Nombre", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_field :first_name, 
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent",
              placeholder: "Tu nombre" %>
          </div>

          <!-- Apellido -->
          <div>
            <%= f.label :last_name, "Apellido", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_field :last_name, 
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent",
              placeholder: "Tu apellido" %>
          </div>
        </div>

        <!-- Email -->
        <div>
          <%= f.label :email, "Correo Electrónico", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.email_field :email, 
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent",
            placeholder: "tu@email.com" %>
        </div>
      </div>

      <hr class="border-gray-200">

      <!-- Cambiar Contraseña -->
      <div class="space-y-4">
        <h2 class="text-xl font-semibold text-gray-900">Cambiar Contraseña</h2>
        <p class="text-sm text-gray-600">Deja estos campos en blanco si no deseas cambiar tu contraseña</p>
        
        <!-- Nueva Contraseña -->
        <div>
          <%= f.label :password, "Nueva Contraseña", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.password_field :password, 
            autocomplete: "new-password",
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent",
            placeholder: "Mínimo 6 caracteres" %>
        </div>

        <!-- Confirmar Contraseña -->
        <div>
          <%= f.label :password_confirmation, "Confirmar Nueva Contraseña", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.password_field :password_confirmation, 
            autocomplete: "new-password",
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent",
            placeholder: "Repite la contraseña" %>
        </div>
      </div>

      <!-- Botones de acción -->
      <div class="flex items-center justify-between pt-6 border-t border-gray-200">
        <%= link_to "Cancelar", profile_path, class: "px-6 py-2 text-gray-700 hover:text-gray-900 font-medium" %>
        <%= f.submit "Guardar Cambios", class: "button" %>
      </div>
    <% end %>
  </div>
</div>
