<%- if controller_name != 'sessions' %>
  <div class="mb-3">
    <%= link_to "Iniciar sesión", new_session_path(resource_name), class:"text-blue-600 hover:text-blue-700 font-medium text-sm transition-colors" %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="mb-3">
    <%= link_to "Crear cuenta", new_registration_path(resource_name), class:"text-blue-600 hover:text-blue-700 font-medium text-sm transition-colors" %>
  </div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="mb-3">
    <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name), class:"text-blue-600 hover:text-blue-700 font-medium text-sm transition-colors" %>
  </div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class="mb-3">
    <%= link_to "¿No recibiste instrucciones de confirmación?", new_confirmation_path(resource_name), class:"text-blue-600 hover:text-blue-700 font-medium text-sm transition-colors" %>
  </div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <div class="mb-3">
    <%= link_to "¿No recibiste instrucciones de desbloqueo?", new_unlock_path(resource_name), class:"text-blue-600 hover:text-blue-700 font-medium text-sm transition-colors" %>
  </div>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <div class="mt-4 space-y-2">
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Iniciar con #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), 
          class: "button-outline w-full", 
          data: { turbo: false } %>
    <% end %>
  </div>
<% end %>
