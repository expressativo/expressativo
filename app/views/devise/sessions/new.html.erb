<section class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-purple-50 flex items-center justify-center px-4">
  <div class="max-w-md w-full">
    <!-- Logo/Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">
        <span class="text-blue-600">Ti</span>vo
      </h1>
      <p class="text-gray-600">Bienvenido de nuevo</p>
    </div>

    <!-- Login Card -->
    <div class="card p-8 shadow-xl">
      <h2 class="title mb-6">Iniciar Sesión</h2>
      
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
        <div class="field">
          <%= f.label :email, class: "label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input", placeholder: "correo@ejemplo.com" %>
        </div>

        <div class="field">
          <%= f.label :password, class: "label" %>
          <%= f.password_field :password, autocomplete: "current-password", class:"input", placeholder: "Tu contraseña" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field flex items-center justify-between mb-6">
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
              <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-700" %>
            </div>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Iniciar Sesión", class: "button w-full py-3 text-base font-medium hover:bg-purple-700 transition-colors", data: { turbo_submits_with: "Iniciando sesión..." } %>
        </div>
      <% end %>

      <!-- Links -->
      <div class="mt-6 text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>

    <!-- Footer Info -->
    <div class="text-center mt-6">
      <p class="text-sm text-gray-500">
        ¿No tienes cuenta? 
        <%= link_to "Regístrate gratis", new_registration_path(resource_name), class: "text-blue-600 hover:text-blue-700 font-medium" %>
      </p>
    </div>
  </div>
</section>
