<section class="max-w-2xl mx-auto card p-4">
<h2 class="title">Hi</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: "label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input", placeholder: "Your email" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "label" %>
      <%= f.password_field :password, autocomplete: "current-password", class:"input", placeholder: "Your password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "button" %>
    </div>
  <% end %>


<%= render "devise/shared/links" %>
</section>
