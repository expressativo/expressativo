


<section class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-purple-50 flex items-center justify-center px-4 py-8">
  <div class="max-w-md w-full">
    <!-- Logo/Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">
        <span class="text-blue-600">Ti</span>vo
      </h1>
      <p class="text-gray-600">Crea tu cuenta gratuita</p>
    </div>

    <!-- Registration Card -->
    <div class="card p-8 shadow-xl">
      <h2 class="title mb-6">Registrarse</h2>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email, class: "label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input", placeholder: "correo@ejemplo.com" %>
        </div>

        <div class="field">
          <%= f.label :password, class: 'label' %>
          <% if @minimum_password_length %>
            <em class="text-xs text-gray-500">(<%= @minimum_password_length %> caracteres mínimo)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class:"input", placeholder: "Crea una contraseña segura" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class: "label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input", placeholder: "Confirma tu contraseña" %>
        </div>

        <div class="actions">
          <%= f.submit "Crear Cuenta", class: "button w-full py-3 text-base font-medium hover:bg-purple-700 transition-colors" %>
        </div>
      <% end %>

      <!-- Links -->
      <div class="mt-6 text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>

    <!-- Footer Info -->
    <div class="text-center mt-6">
      <p class="text-sm text-gray-500">
        ¿Ya tienes cuenta? 
        <%= link_to "Inicia sesión", new_session_path(resource_name), class: "text-blue-600 hover:text-blue-700 font-medium" %>
      </p>
    </div>

    <!-- Benefits -->
    <div class="mt-8 text-center">
      <div class="bg-white/60 backdrop-blur-sm rounded-lg p-4 border border-gray-200">
        <h3 class="font-semibold text-gray-900 mb-2">Comienza gratis</h3>
        <ul class="text-sm text-gray-600 space-y-1">
          <li>✓ Sin tarjeta de crédito</li>
          <li>✓ Configuración en 2 minutos</li>
          <li>✓ Acceso a todas las funciones</li>
        </ul>
      </div>
    </div>
  </div>
</section>