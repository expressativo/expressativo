<section class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-purple-50 flex items-center justify-center px-4">
  <div class="max-w-md w-full">
    <!-- Logo/Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">
        <span class="text-blue-600">Ti</span>vo
      </h1>
      <p class="text-gray-600">Restablecer contraseña</p>
    </div>

    <!-- Password Reset Card -->
    <div class="card p-8 shadow-xl">
      <h2 class="title mb-6">Cambiar tu contraseña</h2>
      
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, data: { turbo: false } }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field">
          <%= f.label :password, "Nueva contraseña", class: "label" %>
          <% if @minimum_password_length %>
            <em class="text-xs text-gray-500">(<%= @minimum_password_length %> caracteres mínimo)</em>
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input", placeholder: "Crea una nueva contraseña" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "Confirmar nueva contraseña", class: "label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input", placeholder: "Confirma tu nueva contraseña" %>
        </div>

        <div class="actions">
          <%= f.submit "Cambiar mi contraseña", class: "button w-full py-3 text-base font-medium hover:bg-purple-700 transition-colors" %>
        </div>
      <% end %>

      <!-- Links -->
      <div class="mt-6 text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>

    <!-- Footer Info -->
    <div class="text-center mt-6">
      <%= link_to "← Volver al inicio", root_path, class: "text-blue-600 hover:text-blue-700 font-medium text-sm" %>
    </div>
  </div>
</section>
