<div>
  <div class="card max-w-[95%] mx-auto mb-[-10px] p-4">
    <div class="flex items-center justify-center">
      <%= link_to @project.title, project_path(@project),  class: "text-2xl underline font-semibold capitalize"%>
    </div>
  </div>
  <div class="card">
    <div class="p-4 border-b border-gray-200">
      <div class="flex justify-between items-center">
        <div>
          <%= link_to 'Nueva lista', new_project_todo_path, class: "button-outline" %>
        </div>
        <div>
          <h2 class="text-xl font-bold text-gray-800">
            Listas de tareas
          </h2>
        </div>
        <div>
          <button class="button-outline">
            Ver como
          </button>
        </div>
      </div>
    </div>
    <section class="p-4">
      <article>
        <header class="pl-6">
          <span class="text-gray-500 text-xs">0/3</span>
        </header>
        <div>
          <ul>
            <li class="flex items-center mb-2">
              <span class="bg-green-500 rounded-full w-5 h-5 inline-block mr-2">
              </span>
              <h3 class="text-gray-800 text-lg font-semibold underline cursor-pointer">
                Tech stuffs
              </h3>
            </li>
            <li class="flex items-center mb-2">
              <input type="checkbox" class="mr-2 w-5 h-5">
              <label class="cursor-pointer">
                Task 1
              </label>
              <span>Comments</span>
            </li>
          </ul>
          <footer>
            <button class="button-outline mt-4">
              Agregar tarea
            </button>
          </footer>
        </div>
      </article>
    </section>
  </div>
</div>