<section class="p-4">
  <% @todos.each do |todo| %>
    <article class="mb-4">
      <header class="pl-6">
        <span class="text-gray-500 text-xs">0/3</span>
      </header>
      <div>
        <ul>
          <li class="flex items-center mb-2">
            <span class="bg-green-500 rounded-full w-5 h-5 inline-block mr-2">
            </span>
            <h3 class="text-gray-800 text-lg font-semibold underline cursor-pointer">
              <%= todo.name %>
            </h3>
          </li>
          <li class="flex items-center mb-2">
            <input type="checkbox" class="mr-2 w-5 h-5">
            <label class="cursor-pointer">
              Task 1
            </label>
            <span>Comments</span>
          </li>
        </ul>
        <footer>
          <button class="button-outline mt-4">
            Agregar tarea
          </button>
        </footer>
      </div>
    </article>
  <% end %>
</section>
