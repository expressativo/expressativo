<div class="p-4 border rounded-xl border-gray-200 px-24 max-w-4xl m-auto">
  <%= link_to edit_project_todo_task_path(@project, @todo, task), data: { turbo_frame: "#{dom_id(task)}_form" } do %>
    <div class="grid grid-cols-6 gap-4 mt-4">
      <div class="col-span-1 flex justify-end">
        <input type="checkbox" class="w-8 h-8" <%= task.done ? 'checked' : '' %>>
      </div>
      <div class="col-span-4">
        <h2 class="text-2xl font-semibold text-gray-900">
          <%= task.title %>
        </h2>
      </div>
    </div>
    <div class="grid grid-cols-6 gap-4 mt-4">
      <div class="col-span-1">
        <div class="flex justify-end items-center gap-2">
          Assignado a:
        </div>
      </div>
      <div class="col-span-4">
        <div class="flex justify-start items-center gap-2">
          Javier Mora
        </div>
      </div>
    </div>
    <div class="grid grid-cols-6 gap-4 mt-4">
      <div class="col-span-1">
        <div class="flex justify-end items-center gap-2">
          Vence el:
        </div>
      </div>
      <div class="col-span-">
        <div class="flex justify-start items-center gap-2">
          <%= l(task.due_date, format: :short) if task.due_date.present? %>
        </div>
      </div>
    </div>
    <div class="grid grid-cols-6 gap-4 mt-4">
      <div class="col-span-1">
        <div class="flex justify-end items-center gap-2">
          Notas:
        </div>
      </div>
      <div class="col-span-4">
        <div class="flex justify-start items-center gap-2">
          <%= task.notes %>
        </div>
      </div>
    </div>
    <div class="grid grid-cols-6 gap-4 mt-4">
      <div class="col-span-1">
        <div class="flex justify-end items-center text-xs text-gray-500">
          Agregado por:
        </div>
      </div>
      <div class="col-span-4">
        <div class="flex justify-start items-center text-xs text-gray-500">
          Javier Mora
        </div>
      </div>
    </div>
  </div>
<% end %>
