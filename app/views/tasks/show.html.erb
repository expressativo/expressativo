<div>
  <div class="card max-w-[95%] mx-auto mb-[-10px] p-4">
    <div class="flex items-center justify-center">
      <ol class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse">
        <li class="inline-flex items-center">
          <a href="#" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600 dark:text-gray-400 dark:hover:text-white">
            <%= link_to @project.title, project_path(@project),  class: "text-xl underline font-semibold capitalize"%>
          </a>
        </li>
        <li aria-current="page">
          <div class="flex items-center">
            <svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
            </svg>
            <%= link_to "To-dos" , project_todos_path(@project),  class: "text-xl underline  capitalize"%>
          </div>
        </li>
        <li>
          <div class="flex items-center">
            <svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
            </svg>
            <%= link_to @todo.name , project_todos_path(@project),  class: "text-xl underline  capitalize"%>
          </div>
        </li>
      </ol>
    </div>
  </div>
  <div class="card">
    <div class="p-4 border-b border-gray-200 px-24">
      <div class="grid grid-cols-6 gap-4 mt-4">
        <div class="col-span-1 flex justify-end">
          <input type="checkbox" class="w-8 h-8">
        </div>
        <div class="col-span-4">
          <h2 class="text-2xl font-semibold text-gray-900">
            <%= @task.title %>
          </h2>
        </div>
      </div>
      <div class="grid grid-cols-6 gap-4 mt-4">
        <div class="col-span-1">
          <div class="flex justify-end items-center gap-2">
            Assigned to:
          </div>
        </div>
        <div class="col-span-4">
          <div class="flex justify-start items-center gap-2">
            Javier Mora
          </div>
        </div>
      </div>
      <div class="grid grid-cols-6 gap-4 mt-4">
        <div class="col-span-1">
          <div class="flex justify-end items-center gap-2">
            Assigned to:
          </div>
        </div>
        <div class="col-span-">
          <div class="flex justify-start items-center gap-2">
            Javier Mora
          </div>
        </div>
      </div>
      <div class="grid grid-cols-6 gap-4 mt-4">
        <div class="col-span-1">
          <div class="flex justify-end items-center gap-2">
            Due on
          </div>
        </div>
        <div class="col-span-4">
          <div class="flex justify-start items-center gap-2">
            Notes
          </div>
        </div>
      </div>
    </div>
  </div>
</div>