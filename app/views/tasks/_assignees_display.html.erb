<% if task.assigned_users.any? %>
  <div class="space-y-2">
    <% task.assigned_users.each do |user| %>
      <div class="inline-block px-3 py-1 bg-purple-50 border border-purple-500 rounded-3xl">
        <div class="flex items-center gap-2">
          <% if user.avatar.attached? %>
            <%= image_tag user.avatar, class: "w-6 h-6 rounded-full object-cover" %>
          <% end %>
          <% if user.full_name %>
            <div class="font-medium text-gray-900 truncate"><%= user.full_name %></div>
          <% else %>
            <div class="font-medium text-gray-900 truncate"><%= user.email %></div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <span class="text-gray-400 italic">
    Sin asignar
  </span>
<% end %>
