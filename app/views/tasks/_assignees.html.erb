<div 
  data-controller="task-assignee"
  data-task-assignee-search-url-value="<%= search_project_todo_task_assignments_path(@project, @todo, task) %>"
  data-task-assignee-assign-url-value="<%= project_todo_task_assignments_path(@project, @todo, task) %>"
  data-task-assignee-unassign-base-url-value="<%= project_todo_task_assignments_path(@project, @todo, task) %>"
  class="space-y-3"
>
  <!-- Lista de usuarios asignados -->
  <div data-task-assignee-target="assignedList" class="space-y-2">
    <% task.assigned_users.each do |user| %>
      <div class="inline-block px-2 py-1 bg-purple-50 border border-purple-500 rounded-3xl" data-user-id="<%= user.id %>">
        <div class="flex justify-between items-center">
          <%= user_avatar(user, class: "w-6 h-6 rounded-full object-cover") %>
          <% if user.full_name.present? %>
            <div class="font-medium text-gray-900 truncate"><%= user.full_name %></div>
          <% else %>
            <div class="font-medium text-gray-900 truncate"><%= user.email %></div>
          <% end %>

          <%= link_to project_todo_task_assignment_path(@project, @todo, task, user.id), 
                    method: :delete,
                    data: { 
                      turbo_method: :delete,
                      turbo_confirm: "¿Desasignar este usuario de la tarea?"
                    },
                    class: "flex-shrink-0 text-red-600 hover:text-red-800" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        <% end %>
        </div>        
      </div>
    <% end %>
  </div>

  <!-- Buscador de usuarios -->
  <div class="relative">
    <div class="relative">
      <input
        type="text"
        data-task-assignee-target="input"
        data-action="input->task-assignee#search blur->task-assignee#hideResults"
        placeholder="Buscar personas del proyecto..."
        class="input"
      />
      <svg class="absolute right-3 top-3 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
      </svg>
    </div>

    <!-- Resultados de búsqueda -->
    <div
      data-task-assignee-target="results"
      class="hidden absolute z-10 w-full mt-1 bg-white border border-gray-300 rounded-lg shadow-lg max-h-60 overflow-y-auto"
    >
      <!-- Los resultados se insertan aquí dinámicamente -->
    </div>
  </div>

  <% if task.assigned_users.empty? %>
    <span class="text-sm text-gray-500 italic">
      No hay personas asignadas a esta tarea
    </span>
  <% end %>
</div>
