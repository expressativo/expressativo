<div>
    <h1>Mis tareas</h1>
    <section>
        <% @tasks.each do |task| %>
            <%= link_to project_todo_task_path(task.todo.project, task.todo, task), class: "mb-4 cursor-pointer border border-gray-200 p-4 rounded-2xl block" do %>
                <%= task.title %>
            <% end %>
        <% end %>
    </section>
</div>