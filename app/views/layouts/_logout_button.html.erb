  <% if authenticated? %>
  <form action="<%= session_path %>" method="post" onsubmit="return confirm('¿Estás seguro de cerrar sesión?')">
    <input type="hidden" name="_method" value="delete">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <button type="submit" class="cursor-pointer block px-4 py-2 text-sm text-gray-700" role="menuitem" tabindex="-1" id="user-menu-item-2">Cerrar sesión</button>
  </form>
<% end %>