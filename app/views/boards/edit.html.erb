<div class="bg-white shadow-md rounded-2xl px-6 pt-6 pb-8 mb-4 max-w-2xl mx-auto">
  <h1 class="text-2xl font-semibold mb-6">
    Editar tablero
  </h1>

  <%= form_with model: [@project, @board], local: true do |form| %>
    <div class="mb-4">
      <%= form.label :title, "Título", class: "label" %>
      <%= form.text_field :title,
          class: "input",
          required: true,
          autofocus: true %>
    </div>

    <div class="mb-4">
      <%= form.label :description, "Descripción (opcional)", class: "label" %>
      <%= form.text_area :description,
          class: "input",
          rows: 4 %>
    </div>

    <div class="flex gap-2">
      <%= form.submit "Actualizar tablero",
          class: "button",
          data: { turbo_submits_with: "Actualizando..." } %>
      <%= link_to "Cancelar", project_board_path(@project, @board), class: "button-outline" %>
    </div>
  <% end %>
</div>
