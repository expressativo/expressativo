<div class="bg-white rounded-2xl px-6 pt-6 pb-8 mb-4 app-container">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-semibold">
      Tableros de <%= @project.title %>
    </h1>
    <div class="flex gap-2">
      <%= link_to "Nuevo tablero", new_project_board_path(@project), class: "button" %>
      <%= link_to "Volver al proyecto", project_path(@project), class: "button-outline" %>
    </div>
  </div>

  <% if @boards.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <% @boards.each do |board| %>
        <div class="border border-gray-300 rounded-lg p-4 hover:shadow-lg transition-shadow">
          <%= link_to project_board_path(@project, board), class: "block" do %>
            <h3 class="text-lg font-semibold mb-2"><%= board.title %></h3>
            <% if board.description.present? %>
              <p class="text-gray-600 text-sm mb-3"><%= truncate(board.description, length: 100) %></p>
            <% end %>
            <div class="flex items-center gap-2 text-sm text-gray-500">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M9 5h-2a2 2 0 0 0 -2 2v12a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-12a2 2 0 0 0 -2 -2h-2" /><path d="M9 3m0 2a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v0a2 2 0 0 1 -2 2h-2a2 2 0 0 1 -2 -2z" /></svg>
              <span><%= board.columns.count %> columnas</span>
            </div>
          <% end %>
          <div class="mt-3 flex gap-2">
            <div>
              <%= link_to "Ver", project_board_path(@project, board), class: "text-sm text-blue-600 hover:underline" %>
            </div>
            <div>
              <%= button_to "Eliminar", 
                project_board_path(@project, board), 
                method: :delete,
                form: { data: { turbo_confirm: "¿Estás seguro?" } },
                class: "text-sm text-red-600 hover:underline" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12 text-gray-500">
      <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mx-auto mb-4 text-gray-400"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M9 5h-2a2 2 0 0 0 -2 2v12a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-12a2 2 0 0 0 -2 -2h-2" /><path d="M9 3m0 2a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v0a2 2 0 0 1 -2 2h-2a2 2 0 0 1 -2 -2z" /></svg>
      <p class="text-lg mb-2">No hay tableros creados</p>
      <p class="text-sm mb-4">Crea tu primer tablero Kanban para organizar tus tareas</p>
      <%= link_to "Crear tablero", new_project_board_path(@project), class: "button" %>
    </div>
  <% end %>
</div>
