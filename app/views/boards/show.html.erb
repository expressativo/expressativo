<div>
  <div class="flex justify-between items-center mb-4">
    <div class="flex items-center gap-4">
      <div>
      <%= link_to edit_project_board_path(@project, @board) do %>
        <h1 class="text-2xl font-semibold"><%= @board.title %></h1>
      <% end %>

        <% if @board.description.present? %>
          <p class="text-gray-600 mt-1"><%= @board.description %></p>
        <% end %>
      </div>
      
      <!-- Filtro de responsables -->
      <div data-controller="board-filter" class="relative">
        <button 
          data-action="click->board-filter#toggle"
          data-board-filter-target="button"
          class="flex items-center gap-2 px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
          </svg>
          <span class="text-sm font-medium text-gray-700">
            <% if params[:assignee_id].present? %>
              <% if params[:assignee_id] == "unassigned" %>
                Sin asignar
              <% else %>
                <% assignee = @project_users.find { |u| u.id == params[:assignee_id].to_i } %>
                <%= assignee&.first_name || "Filtrado" %>
              <% end %>
            <% else %>
              Todos
            <% end %>
          </span>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </button>
        
        <!-- Dropdown -->
        <div 
          data-board-filter-target="dropdown"
          class="hidden absolute left-0 mt-2 w-56 bg-white rounded-lg shadow-lg border border-gray-200 z-50">
          <div class="py-1">
            <!-- Opción: Todos -->
            <a 
              href="#"
              data-action="click->board-filter#filter"
              data-assignee-id="all"
              data-assignee-name="Todos"
              class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 <%= 'bg-blue-50 font-semibold' unless params[:assignee_id].present? %>">
              Todos
            </a>
            
            <!-- Opción: Sin asignar -->
            <a 
              href="#"
              data-action="click->board-filter#filter"
              data-assignee-id="unassigned"
              data-assignee-name="Sin asignar"
              class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 <%= 'bg-blue-50 font-semibold' if params[:assignee_id] == 'unassigned' %>">
              Sin asignar
            </a>
            
            <% if @project_users.any? %>
              <div class="border-t border-gray-200 my-1"></div>
              
              <!-- Lista de usuarios -->
              <% @project_users.each do |user| %>
                <a 
                  href="#"
                  data-action="click->board-filter#filter"
                  data-assignee-id="<%= user.id %>"
                  data-assignee-name="<%= user.first_name %> <%= user.last_name %>"
                  class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 <%= 'bg-blue-50 font-semibold' if params[:assignee_id].to_i == user.id %>">
                  <% if user.first_name.present? %>
                    <%= user.first_name %> <%= user.last_name %>
                  <% else %>
                    <%= user.email %>
                  <% end %>
                </a>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
      
      <!-- Indicador de filtro activo -->
      <% if params[:assignee_id].present? %>
        <a 
          href="<%= project_board_path(@project, @board) %>"
          class="text-sm text-blue-600 hover:text-blue-800 flex items-center gap-1">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
          Limpiar filtro
        </a>
      <% end %>
    </div>
    
    <div class="flex gap-2">
      <%= link_to "Agregar tareas", add_tasks_project_board_path(@project, @board), class: "button" %>
      <%= link_to "Volver", project_boards_path(@project), class: "button-outline" %>
    </div>
  </div>
</div>

<!-- Tablero Kanban -->
<div class="pb-4 overflow-x-auto overflow-y-auto h-[calc(100vh)]">
  <div
    data-controller="kanban board-columns"
    data-board-columns-target="container"
    data-board-columns-project-id-value="<%= @project.id %>"
    data-board-columns-board-id-value="<%= @board.id %>"
    class="flex gap-4 min-h-screen"
    style="min-width: max-content;">

    <% @columns.each do |column| %>
      <div
        class="flex-shrink-0 w-80 column-draggable bg-white"
        data-column-id="<%= column.id %>"
        data-controller="column-editor"
        data-column-editor-column-id-value="<%= column.id %>"
        data-column-editor-board-id-value="<%= @board.id %>"
        data-column-editor-project-id-value="<%= @project.id %>"
        data-column-editor-update-url-value="<%= project_board_column_path(@project, @board, column) %>">

        <!-- Encabezado de columna -->
        <div class="rounded-t-lg px-4 py-3 border-b-2 border-gray-300 column-drag-handle cursor-move sticky top-0 z-10 bg-white">
          <div class="flex justify-between items-center">
            <div class="flex items-center gap-2 flex-1">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8h16M4 16h16" />
              </svg>
              <h3
                data-column-editor-target="title"
                data-action="click->column-editor#editTitle"
                class="font-semibold text-gray-700 cursor-pointer hover:text-blue-600">
                <%= column.title %>
              </h3>
              <span class="text-sm text-gray-500">(<%= column.tasks.count %>)</span>
            </div>
          </div>
        </div>

        <!-- Lista de tareas -->
        <div
          data-kanban-target="column"
          data-column-id="<%= column.id %>"
          class="rounded-b-lg p-4 min-h-[200px] space-y-3">

          <% column.tasks.each do |task| %>
            <%= render 'boards/task_card', task: task, board: @board, project: @project %>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Columna para agregar nueva columna -->
    <div 
      class="flex-shrink-0 w-80 column-add-new"
      data-controller="column-editor"
      data-column-editor-create-url-value="<%= project_board_columns_path(@project, @board) %>">
      
      <div class="rounded-lg px-4 py-3">
        <button 
          data-action="click->column-editor#showForm"
          class="w-full text-left font-semibold text-gray-600 hover:text-gray-800 hover:bg-gray-200 rounded px-2 py-2 transition">
          + Agregar columna
        </button>
        
        <!-- Formulario para nueva columna -->
        <div data-column-editor-target="form" class="hidden mt-2">
          <input 
            type="text"
            data-column-editor-target="newColumnTitle"
            placeholder="Nombre de la columna"
            class="w-full border border-gray-300 rounded px-3 py-2 mb-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
            data-action="keydown.enter->column-editor#createColumn keydown.escape->column-editor#cancelCreate">
          
          <div class="flex gap-2">
            <button 
              data-action="click->column-editor#createColumn"
              class="bg-blue-600 text-white px-3 py-1 rounded hover:bg-blue-700 text-sm">
              Agregar
            </button>
            <button 
              data-action="click->column-editor#cancelCreate"
              class="bg-gray-300 text-gray-700 px-3 py-1 rounded hover:bg-gray-400 text-sm">
              Cancelar
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
