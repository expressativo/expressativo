<% if user.errors.any? %>
  <div class="errors">
    <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model: user, url: profile_path(user), method: :patch, local: true do |form| %>
  <div class="mb-4">
    <%= form.label 'Nombre', class: "label" %>
    <%= form.text_field :first_name, class: "input mt-2", placeholder: "Ingresa tu nombre" %>
  </div>
  <div class="mb-4">
    <%= form.label 'Apellido', class: "label" %>
    <%= form.text_field :last_name, class: "input mt-2", placeholder: "Ingresa tu apellido" %>
  </div>
  <%= form.submit "Guardar", class: "button" %>
<% end %>