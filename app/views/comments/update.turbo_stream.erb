<%= turbo_stream.replace dom_id(@comment) do %>
  <%= render 'comments/comment', comment: @comment, project: @project, todo: @todo, task: @task %>
<% end %>

<%= turbo_stream.prepend "flash-messages" do %>
  <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
    <span class="block sm:inline">Comentario actualizado correctamente.</span>
  </div>
<% end %>
