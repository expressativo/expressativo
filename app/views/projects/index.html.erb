<div>
  <h2 class="text-2xl font-bold text-center mb-4">
    Tivo
  </h2>
  <section class="mb-4 flex justify-center">
    <div class="mt-2">
      <div>
        <%= link_to "Crear proyecto", new_project_path, class: "button" %>
      </div>
    </div>
  </section>
  <section class="mt-4">
    <% if @projects.any? %>
      <%= render 'projects/list', projects: @projects %>
    <% else %>
      <h3 class="text-xl font-semibold mb-2">
        No Projects Available
      </h3>
      <p class="text-gray-700 mb-4">
        It seems like there are no projects to display at the moment.
      </p>
      <p class="text-gray-700 mb-4">
        Please check back later or contact us for more information.
      </p>
    <% end %>
  </section >