<div class="mt-12 flex grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  <% @projects.each do |single| %>
    <%= link_to project_path(single), class: "mb-4 border border-gray-200 p-4 rounded-2xl bg-white min-h-[200px] flex justify-between" do %>
      <div class="flex flex-col justify-between h-full w-full">
        <h3 class="text-xl font-semibold mb-4">
          <%= single.title %>
        </h3>
        <div class="flex -space-x-2 mt-auto">
          <%= user_avatar(single.owner, class: "w-8 h-8 rounded-full border-2 border-white") %>
          <% if single.members.present? %>
            <% single.members.each do |member| %>
              <%= user_avatar(member, class: "w-8 h-8 rounded-full border-2 border-white object-cover") %>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>