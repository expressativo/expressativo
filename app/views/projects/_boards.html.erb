<div class="p-4 border-r border-gray-300">
  <div class="flex items-center justify-between mb-4">
    <h2 class="text-lg font-semibold flex items-center gap-2">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M3 5a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v14a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-14z" /><path d="M9 3v18" /><path d="M16 15l-2 -2l2 -2" /></svg>
      Tableros
    </h2>
    <%= link_to new_project_board_path(@project), class: "text-blue-600 hover:text-blue-800" do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M12 5l0 14" /><path d="M5 12l14 0" /></svg>
    <% end %>
  </div>

  <% if @project.boards.any? %>
    <ul class="space-y-2">
      <% @project.boards.limit(5).each do |board| %>
        <li>
          <%= link_to board.title, project_board_path(@project, board), class: "block text-gray-700 hover:text-blue-600 hover:bg-gray-50 p-2 rounded transition-colors" %>
        </li>
      <% end %>
    </ul>
    
    <% if @project.boards.count > 5 %>
      <div class="mt-3 pt-3 border-t border-gray-200">
        <%= link_to "Ver todos los tableros", project_boards_path(@project), class: "text-sm text-blue-600 hover:underline" %>
      </div>
    <% end %>
  <% else %>
    <p class="text-gray-500 text-sm">No hay tableros creados</p>
    <%= link_to "Crear tablero", new_project_board_path(@project), class: "text-sm text-blue-600 hover:underline mt-2 inline-block" %>
  <% end %>
</div>
