<div class="p-4 border-r border-gray-300">
    <h2 class="card_title">
      Tablero
    </h2>

  <% if @project.boards.any? %>
    <ul class="space-y-2">
      <% @project.boards.limit(5).each do |board| %>
        <li>
          <%= link_to board.title, project_board_path(@project, board), class: "block text-gray-700 hover:text-blue-600 hover:bg-gray-50 p-2 rounded transition-colors" %>
        </li>
      <% end %>
    </ul>
    
    <% if @project.boards.count > 5 %>
      <div class="mt-3 pt-3 border-t border-gray-200 text-center">
        <%= link_to "Ver todos los tableros", project_boards_path(@project), class: "text-sm text-blue-600 hover:underline" %>
      </div>
    <% end %>
  <% else %>
    <p class="text-gray-500 text-sm text-center">No hay tableros creados</p>
    <%= link_to "Crear tablero", new_project_board_path(@project), class: "text-sm text-blue-600 hover:underline mt-2 flex justify-center" %>
  <% end %>

