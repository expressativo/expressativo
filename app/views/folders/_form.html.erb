<%= form_with(model: folder, class: "contents", url: folder.persisted? ? project_folder_path(@project, folder) : project_folders_path(@project, parent_folder_id: params[:parent_folder_id])) do |form| %>
  <% if folder.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(folder.errors.count, "error") %> prohibited this folder from being saved:</h2>
      <ul class="list-disc ml-6">
        <% folder.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card max-w-[95%] mx-auto mb-4 p-6">
    <div class="mb-4">
      <%= form.label :name, "Nombre de la carpeta", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :name, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Escribe un nombre", autofocus: true %>
    </div>

    <div class="flex gap-2">
      <%= form.submit "Guardar", class: "button" %>
      <%= link_to "Cancelar", :back, class: "button secondary" %>
    </div>
  </div>
<% end %>
